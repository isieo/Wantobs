<% if params[:search_for].blank?%>
  <%= form_tag root_path, :method => 'get' do %>
      <%= label_tag 'search_for', 'Search for' %>
      <%= select_tag :search_for, "<option>WTS</option><option>WTB</option>".html_safe%><br />
      <%= label_tag 'search', 'keyword' %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>
<% end %>

<% if !@search.nil? %>
  Results for: <%= params[:search]%> </br>
  <% @search.each do |wts|%>
    <%= wts.item %>
  <% end %>
<% end %>
