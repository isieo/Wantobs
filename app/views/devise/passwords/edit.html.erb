<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'custom' }) do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <h2>Change your password</h2>
      <div class="row ">
        <div class="large-9 small-9 columns">
          <%= devise_error_messages! %>
        </div>
      </div>
    </div>
  </div>
  <%= f.hidden_field :reset_password_token %>
  <div class="row">
    <div class="large-6 columns">

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :password, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.password_field :password %>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :password_confirmation, "Confirm new password", class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-4 small-4 large-offset-4 columns">
          <%= f.submit "Change my password", class: "button small"%>
        </div>
      </div>
      
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
