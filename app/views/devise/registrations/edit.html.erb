<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'custom'  }) do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <div class="row ">
        <div class="large-9 small-9 columns">
          <%= devise_error_messages! %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="large-6 columns">

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :username, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.text_field :username %>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :email, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.email_field :email %>
        </div>
      </div>
      
      <% if f.object.encrypted_password.present? %>
        <div class="row ">
          <div class="large-3 small-3 columns">
            <%= f.label :password, class: "right inline", hint: "leave blank if you don't want to change it" %>
          </div>
          <div class="large-9 small-9 columns">
            <%= f.password_field :password, :autocomplete => "off" %>
            <h5 class="subheader">leave blank if you don't want to change it</h5>
          </div>
        </div>

        <div class="row ">
          <div class="large-3 small-3 columns">
            <%= f.label :password_confirmation, class: "right inline" %>
          </div>
          <div class="large-9 small-9 columns">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
        
        <div class="row ">
          <div class="large-3 small-3 columns">
            <%= f.label :current_password, class: "right inline", hint: "we need your current password to confirm your changes" %>
          </div>
          <div class="large-9 small-9 columns">
            <%= f.password_field :current_password %>
            <h5 class="subheader">we need your current password to confirm your changes</h5>
          </div>
        </div>
      <% end %>
      
      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :image, class: "right inline"%>
        </div>
        <div class="large-4 small-4 columns">
          <%= image_tag @user.image_url(:list_size).to_s, :class => "th" %>
        </div>
        <div class="large-8 small-8 columns">
          <%= f.file_field :image %>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-8 small-8 large-offset-4 columns">
          <%= f.submit "Update", class: "button small"%>
          <%= link_to "Back", :back, class: "button small secondary" %>
        </div>
      </div>
      
    </div>
  </div>
<% end %>

<div class="row ">
  <div class="large-4 small-4 left">
    <%#= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "button small alert" %>
    <%#= link_to "Back", :back, class: "button small secondary" %>
  </div>
</div>


