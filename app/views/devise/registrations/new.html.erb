<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{class: 'custom'}) do |f| %>

  <div class="row">
    <div class="large-6 columns">
      <h2>Sign up</h2>
      <div class="row ">
        <div class="large-9 small-9 columns">
          <%= devise_error_messages! %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="large-6 columns">

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :username, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.text_field :username %>
        </div>
      </div>

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :email, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :password, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :password_confirmation, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-4 small-4 large-offset-4 columns">
          <%= f.submit "Sign up", class: "button small"%>
        </div>
      </div>
      
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>


