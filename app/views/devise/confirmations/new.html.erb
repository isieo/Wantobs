<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, class: 'custom' }) do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <h2>Resend confirmation instructions</h2>
      <div class="row ">
        <div class="large-9 small-9 columns">
          <%= devise_error_messages! %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :login, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.text_field :login %>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-4 small-4 large-offset-4 columns">
          <%= f.submit "Resend confirmation instructions", class: "button small"%>
        </div>
      </div>
   
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
