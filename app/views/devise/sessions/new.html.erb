<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: 'custom' }) do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <h2>Sign in</h2>
      <div class="row ">
        <div class="large-9 small-9 columns">
          <%= devise_error_messages! %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="large-6 columns">

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :login, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.text_field :login %>
        </div>
      </div>

      <div class="row ">
        <div class="large-3 small-3 columns">
          <%= f.label :password, class: "right inline" %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.password_field :password %>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-4 small-4 large-offset-4 columns">
          <% if devise_mapping.rememberable? -%>
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %> Remember Me
            <% end %>
          <% end -%>
        </div>
      </div>
      
      <div class="row ">
        <div class="large-4 small-4 large-offset-4 columns">
          <%= f.submit "Sign in", class: "button small"%>
        </div>
      </div>
      
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
